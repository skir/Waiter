<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray"/>
            <stroke android:color="@color/dark_button"
                android:width="2dp"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:bottom="4dp"
                android:right="4dp"/>
        </shape>
    </item>

    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/gray"/>
            <stroke android:color="@color/dark_button"
                android:width="2dp"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:bottom="4dp"
                android:right="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke android:color="@color/dark_button"
                android:width="2dp"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:bottom="4dp"
                android:right="4dp"/>
        </shape>
    </item>
</selector>